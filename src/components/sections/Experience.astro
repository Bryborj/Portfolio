---
import Section from "../Section.astro"

import { work } from "@cv"
---

<Section title="Experiencia laboral">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights, propietary }) => {
          const startYear = new Date(startDate).getFullYear()
          const endYear =
            endDate != "" ? new Date(endDate).getFullYear() : "Actual"
          const years = `${startYear} - ${endYear}`
          const Propietary = propietary ? " (Propietario)" : false
          const highlightList = highlights
            ? highlights.map((highlight) => <li>â€¢ {highlight}</li>)
            : null

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{name}{Propietary && <span class="prop">{Propietary}</span>}</h3>
                    
                    <h4>{position}</h4>
                  </div>

                  <time>{years}</time>
                </header>

                <footer>
                  <p>{summary}</p>
                  {highlightList && <div class="highlights">{highlightList}</div>}
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  .prop {
    font-size: 0.85rem;
    color: #00000065;
  }
  .highlights {
    margin-top: 2px;
    margin-left: 1rem;
    font-size: 0.85rem;
    color: #00000065;
  }
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }
</style>
