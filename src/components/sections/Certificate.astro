---
import Section from "../Section.astro";

import { certificates } from "@cv";
---

<Section title="Certificados">
  <ul>
    {
      certificates.map(({ name, date, issuer, url}) => {
        const startYear = date != "" ? new Date(date).getFullYear() : "En curso";
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{issuer}</h3>
                </div>
                <time>{startYear}</time>
              </header>
              <footer>
                <p><a href={url}>{name}</a></p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display:flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }
  a {
    color: #111;
    }
  a:hover {
    text-decoration: underline;
  }
</style>
